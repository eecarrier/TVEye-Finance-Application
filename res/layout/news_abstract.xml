<?xml version="1.0" encoding="utf-8"?>
<!-- This fragment should be shown in the news group layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <!-- This text view should hide or show the abstract when clicked -->
    <TextView 
        android:id="@+id/news_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <!-- This linear layout should be toggled visible/invisible -->
    <LinearLayout
        android:id="@+id/news_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <ImageView
	        android:id="@+id/news_picture"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
		<TextView 
		    android:id="@+id/news_abstract"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>