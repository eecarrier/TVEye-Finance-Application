<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
		<item name="android:background">@color/action_bar</item>
	</style>
    <style name="Theme.Holo.TVEye" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
		<item name="android:windowBackground">@color/background</item>
    </style>
    <style name="TileHeading" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/tile_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/tile_heading_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
	    <item name="android:textSize">38dip</item>
	    <item name="android:ellipsize">marquee</item>
    </style>
    <style name="DropDown">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/dropdown_default</item>
        <item name="android:gravity">center_horizontal</item>
	    <item name="android:padding">3dip</item>
	    <item name="android:shadowColor">@color/dropdown_text_shadow</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	    <item name="android:textColor">@color/dropdown_text</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">20dip</item>
    </style>
</resources>